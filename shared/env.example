# AI-Finance Tracker Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/finance_tracker

# JWT Secret Key (change this in production!)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Plaid Configuration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox  # Options: sandbox, development, production

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=AI-Finance Tracker

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Development Settings
DEBUG=True
ENVIRONMENT=development

# OpenAI Configuration (for future AI features)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration (for future features)
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads
